<Window x:Class="NbaApi.Views.DisplayCountryCategories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NbaApi.Views" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="DisplayCountryCategories" Height="450" Width="800">
    
    <Grid>
        <ListBox Name="listBox" FontSize="25" ItemsSource="{Binding CountryCategories}"  SelectedItem="{Binding SelectedCountry}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding SelectedCountryCommand}"  ></i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="0,0,10,0" Source="{Binding ImagePath}"></Image>
                        <TextBlock VerticalAlignment="Center" Text="{Binding Name}" HorizontalAlignment="Center" FontSize="30"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
